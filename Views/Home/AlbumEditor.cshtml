@model AlbumViewModel
@{
    Layout = "_SimpleLayout";
}

<partial name="_Validation" />

<h5 class="bg-@Model?.Theme text-white text-center p-2">
    @Model?.Action
</h5>

<form asp-action="@Model?.Action" method="post">
    <div class="form-group">
        <label asp-for="Album.AlbumId"></label>
        <input class="form-control"
               asp-for="Album.AlbumId" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Album.Title"></label>
        <div>
            <span asp-validation-for="Album.Title" class="text-danger">
            </span>
        </div>
        <input class="form-control" asp-for="Album.Title"
               readonly="@Model?.ReadOnly" />
    </div>
    <div class="form-group">
        <label asp-for="Album.ReleaseDate"></label>
        <div>
            <span asp-validation-for="Album.ReleaseDate" class="text-danger">
            </span>
        </div>
        <input class="form-control" asp-for="Album.ReleaseDate"
               readonly="@Model?.ReadOnly" />
    </div>
    <div class="form-group">
        <label asp-for="Album.Artist"></label>
        <div>
            <span asp-validation-for="Album.Artist"
                  class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Album.Artist"
               readonly="@Model?.ReadOnly" />
    </div>
    <div class="form-group">
        <label asp-for="Album.Group"></label>
        <div>
            <span asp-validation-for="Album.Group"
                  class="text-danger"></span>
        </div>
        <input class="form-control" asp-for="Album.Group"
               readonly="@Model?.ReadOnly" />
    </div>
    <div class="form-group">
        <label asp-for="Album.GenreId">Genre</label>
        <div>
            <span asp-validation-for="Album.GenreId"
                  class="text-danger"></span>
        </div>
        <select asp-for="Album.GenreId" class="form-control"
                disabled="@Model?.ReadOnly"
                asp-items="@(new SelectList(Model?.Genres,
                    "GenreId", "GenreName"))">
            <option value="" disabled selected>Choose a Genre</option>
        </select>
    </div>
    
    @if (Model?.ShowAction == true) {
        <button class="btn btn-@Model?.Theme mt-2" type="submit">
            @Model?.Action
        </button>
    }
    <a class="btn btn-secondary mt-2" asp-action="Album">Back</a>
</form>