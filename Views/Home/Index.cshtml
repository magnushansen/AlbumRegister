

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <description bg-color="info">This is an album library application. Browse and manage your favorite albums.</description>
</div>


@{
    var albums = (IEnumerable<AlbumRegister.Models.Album>)Model.Albums;
    var a = albums.OrderBy(x => Guid.NewGuid()).FirstOrDefault();
}

@if (a != null)
{
    <partial name="_AlbumSummary" model="a" />
}
